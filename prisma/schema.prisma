generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:asdwow123@localhost:5432/ticketing_db"
}

model Tickets {
  ticket_id           Int        @id @default(autoincrement())
  event_time_id       Int
  purchaser_id        Int
  event_id            Int
  location            Int?
  seat_location       String
  quantity            Int?
  price_per_ticket    Int
  payer_email         String
  payer_id            String
  payer_firstName     String
  payer_lastName      String
  identification_num  String
  identification_type String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  purchase_id         Int?
  purchase            Purchases? @relation(fields: [purchase_id], references: [purchase_id])
}

model Events {
  event_id    Int       @id @default(autoincrement())
  event_name  String?
  description String?
  location    String?
 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  event_info  EventInfo[] @relation("EventToEventInfo")
}

model EventInfo {
  event_info_id Int      @id @default(autoincrement())
  event_id      Int
  event Events @relation(fields: [event_id], references: [event_id], name: "EventToEventInfo")
  datetime      DateTime
  price_per_ticket Int
  available_seats String[]
  location String
  status String @default("scheduled")
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Purchases {
  purchase_id    Int       @id @default(autoincrement())
  purchaser_id   Int
  event_time_id  Int
  total_quantity Int
  total_price    Int
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  tickets        Tickets[]
}

model Users {
  id           Int    @id @default(autoincrement())
  purchaser_id Int
  name         String
  last_name    String
  dni          String
  email        String
  password     String
}
